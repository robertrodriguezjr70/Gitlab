build node:
  stage: build
  image: centos:7.9.2009
  script:
    - yum update -y
    - yum install net-tools -y
    - mkdir build
    - cd build
    - touch installed.txt
    - echo "centos installed" > installed.txt
  artifacts:
    paths:
      - build/

test node:
    stage: test
    script:
    - test -f "build/installed.txt"
    - cd build
    - grep "centos installed" installed.txt
    - echo "test complete"
